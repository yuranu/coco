{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch - WSL",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Make",
            "program": "${input:exe}",
            "args": [
                ""
            ],
            "stopAtEntry": true,
            "environment": [],
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "externalConsole": false,
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
            "cwd": ".",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "c:\\windows\\sysnative\\bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c": "C:/",
                "/mnt/d": "D:/"
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "exe",
            "description": "EXE name",
            "default": "./build/debug/demo"
        }
    ]
}